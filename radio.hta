<script type='text/javascript'>
function playRadio(url)
{
	if(navigator.onLine){
		if(!FlashDetect.installed){
			alert("Flash is required ! Please install Adobe Flash Player."); 
			loadContent(help);
		}else{
			var s1 = new SWFObject('http://www.shoutcheap.com/flashplayer/skins/player.swf',
			'player',"240","50","9","#444444");
			s1.addParam('allowfullscreen','true');
			s1.addParam('allowscriptaccess','always')
			s1.addParam("flashvars","skin=http://www.shoutcheap.com/flashplayer/skins/skin-name.swf&title=Live Stream&type=sound&file=" + url +  "/;stream.mp3&duration=99999&id=scplayer&autostart=true");
			s1.write("container");
		}
	}
	else
	{
	  alert('Internet connection not detected !');
	  loadContent(help);
	}
}

function switchOff()
{
	if(confirm("\tAre you sure about it , that you want to...\n\tSwitch Off IP Radio Streamer ?"))
	{
		window.close();
		return true;
	}
	else
	{
		return false;
	}
}

function loadContent(ID)
{
	content.innerHTML=ID.innerHTML;
}

loadContent(about);
playRadio('http://sc3.spacialnet.com:16704');
</script>
